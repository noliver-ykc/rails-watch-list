<button type="button" class="btn btn-dark mb-2 rounded"><%= link_to "ï¼‹ List", new_list_path %></button>
<div class="grid">
  <% @lists.each do |list| %>
    <div class="card text-light bg-dark card-sizer">
      <div class="card-body">
        <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
        <p class="card-text"><%= list.description %> </p>
      </div>
      <% if list.photo.key  %>
        <%= cl_image_tag list.photo.key, class: "card-img-bottom", alt:"card image", width: 400, height: 215 %>
      <% else %>
        <img class="card-img-bottom list-img" src="https://source.unsplash.com/random?<%= list.name %>" alt="Card image cap">
      <% end %>
    </div>
  <% end %>
</div>
